{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":assignAndReview(green1052)",
        ":automergeAll",
        ":automergeBranch",
        ":configMigration",
        ":disableDependencyDashboard",
        ":label(dependencies)"
    ],
    "packageRules": [
        {
            "automerge": true,
            "ignoreTests": true,
            "rangeStrategy": "bump",
            "matchPackageNames": [
                "*"
            ],
            "groupName": "all dependencies",
            "groupSlug": "all"
        }
    ]
}
